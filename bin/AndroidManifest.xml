            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="morris.lawn.namespace.AddLawn" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="morris.mow.time.SettleUp"
            android:label="@string/app_name" >
