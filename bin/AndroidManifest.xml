                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="morris.mow.time.FullSchedule"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="morris.lawn.namespace.FullSchedule" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
         <activity
            android:name="morris.mow.time.HistoryActivity"
            android:label="@string/app_name" >
